{% extends 'base.html.twig' %}

{% block title %}Statistiques{% endblock %}

{% block body %}
<div class="container my-4">
    <h1 class="mb-4 text-center fw-bold">Statistiques</h1>

    <section class="classements mb-5">
        <h2 class="mb-4 text-primary fw-semibold">Classements</h2>
        <table class="table table-striped table-hover shadow-sm rounded-4">
            <thead class="table-light">
                <tr>
                    <th>Club</th>
                    <th>Poule</th>
                    <th>Points</th>
                    <th>Matchs joués</th>
                    <th>Gagnés</th>
                    <th>Nuls</th>
                    <th>Perdus</th>
                    <th>Buts Pour</th>
                    <th>Buts Contre</th>
                    <th>Goal Average</th>
                </tr>
            </thead>
            <tbody>
                {% for classement in classements %}
                    <tr>
                        <td>{{ classement.club.nom }}</td>
                        <td>{{ classement.poule.nom }}</td>
                        <td>{{ classement.points }}</td>
                        <td>{{ classement.matchsjouer }}</td>
                        <td>{{ classement.gagnes }}</td>
                        <td>{{ classement.nuls }}</td>
                        <td>{{ classement.perdus }}</td>
                        <td>{{ classement.butsPour }}</td>
                        <td>{{ classement.butscontre }}</td>
                        <td>{{ classement.goalaverage }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10" class="text-center">Aucun classement disponible</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>

    <section class="joueurs-stats mb-5">
        <h2 class="mb-4 text-primary fw-semibold">Statistiques des joueurs</h2>
        <table class="table table-striped table-hover shadow-sm rounded-4">
            <thead class="table-light">
                <tr>
                    <th>Joueur</th>
                    <th>Buts</th>
                    <th>Passes</th>
                    <th>Cartons Jaunes</th>
                    <th>Cartons Rouges</th>
                </tr>
            </thead>
            <tbody>
                {% for stat in joueursStats %}
                    <tr>
                        <td>{{ stat.joueur.nom }}</td>
                        <td>{{ stat.totalButs }}</td>
                        <td>{{ stat.totalPasses }}</td>
                        <td>{{ stat.totalCartonsJaunes }}</td>
                        <td>{{ stat.totalCartonsRouges }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucune statistique disponible</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>

    <section class="top-scorers mb-5">
        <h2 class="mb-4 text-primary fw-semibold">Top Buteurs</h2>
        <ul class="list-group shadow-sm rounded-4">
            {% for scorer in topScorers %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ scorer.joueur.nom }} <span class="badge bg-primary rounded-pill">{{ scorer.totalButs }}</span>
                </li>
            {% else %}
                <li class="list-group-item text-center text-muted">Aucun buteur disponible</li>
            {% endfor %}
        </ul>
    </section>

    <section class="top-assisters mb-5">
        <h2 class="mb-4 text-primary fw-semibold">Top Passeurs</h2>
        <ul class="list-group shadow-sm rounded-4">
            {% for assister in topAssisters %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ assister.joueur.nom }} <span class="badge bg-primary rounded-pill">{{ assister.totalPasses }}</span>
                </li>
            {% else %}
                <li class="list-group-item text-center text-muted">Aucun passeur disponible</li>
            {% endfor %}
        </ul>
    </section>

    <section class="top-goal-assists mb-5">
        <h2 class="mb-4 text-primary fw-semibold">Top Buts + Passes</h2>
        <ul class="list-group shadow-sm rounded-4">
            {% for ga in topGoalAssists %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ ga.joueur.nom }} <span class="badge bg-primary rounded-pill">{{ ga.goalsAssists }}</span>
                </li>
            {% else %}
                <li class="list-group-item text-center text-muted">Aucune statistique disponible</li>
            {% endfor %}
        </ul>
    </section>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <style>
        body, html {
            margin: 0;
            padding: 0;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            background-color: #0B132B;
            color: #E8F5E9;
        }
        a {
            color: #1ABC9C;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
        h1, h2, h3 {
            font-weight: 700;
            margin: 0 0 1rem 0;
        }
        h1 {
            font-size: 2.5rem;
            color: #E8F5E9;
        }
        h2 {
            font-size: 1.8rem;
            color: #1ABC9C;
            margin-bottom: 1rem;
        }
        p {
            font-size: 1rem;
            line-height: 1.5;
            margin-bottom: 1rem;
            color: #E8F5E9;
        }
        /* Top bar */
        .top-bar {
            background-color: #021F1F;
            padding: 1rem 2rem;
            font-size: 2rem;
            font-weight: 700;
            color: #E8F5E9;
        }
        /* Hero slider */
        .hero-slider {
            position: relative;
            height: 350px;
            width: 100%;
        }
        .hero-slide {
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            padding-left: 3rem;
            color: #E8F5E9;
            font-size: 1.5rem;
            font-weight: 600;
            background-repeat: no-repeat;
        }
        .hero-slide .btn-link {
            margin-top: 1rem;
            background-color: #1ABC9C;
            color: #021F1F;
            padding: 0.5rem 1.5rem;
            border-radius: 20px;
            font-weight: 700;
            text-decoration: none;
            display: inline-block;
            transition: background-color 0.3s ease;
        }
        .hero-slide .btn-link:hover {
            background-color: #00C853;
            color: white;
        }
        /* Hero slider pagination dots */
        .hero-pagination {
            position: absolute;
            bottom: 15px;
            left: 3rem;
            display: flex;
            gap: 0.5rem;
        }
        .hero-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: rgba(232, 245, 233, 0.5);
            cursor: pointer;
        }
        .hero-dot.active {
            background-color: #E8F5E9;
        }
        /* Notre travail en action */
        .container-uefa {
            max-width: 1140px;
            margin: 2rem auto;
            padding: 0 1rem;
        }
        .section-title {
            font-weight: 700;
            font-size: 1.8rem;
            margin-bottom: 1rem;
            color: #3CB043;
        }
        .work-action {
            background-color: #3CB043;
            padding: 1rem;
            border-radius: 10px;
            position: relative;
            color: #E8F5E9;
        }
        .swiper {
            width: 100%;
            padding-bottom: 2rem;
        }
        .swiper-slide {
            background: #3CB043;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
            text-align: left;
            color: #E8F5E9;
            padding: 0;
            position: relative;
        }
        .swiper-slide img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 10px 10px 0 0;
        }
        .slide-caption {
            padding: 0.5rem 1rem;
            font-size: 1rem;
            font-weight: 600;
        }
        /* Scroll arrows for swiper */
        .swiper-button-next, .swiper-button-prev {
            color: #E8F5E9;
            top: 50%;
            width: 30px;
            height: 30px;
            margin-top: -15px;
        }
        /* Qui nous sommes */
        .qui-nous-sommes {
            background-color: #3CB043;
            background-image: url('{{ asset("assets/uefa_logo_faint.png") }}');
            background-repeat: no-repeat;
            background-position: center;
            background-size: 60%;
            padding: 3rem 2rem;
            border-radius: 10px;
            color: #E8F5E9;
            max-width: 1140px;
            margin: 2rem auto;
            position: relative;
        }
        .qui-nous-sommes h2 {
            color: #E8F5E9;
            font-size: 2rem;
            margin-bottom: 1rem;
        }
        .qui-nous-sommes p {
            font-size: 1.1rem;
            max-width: 700px;
            margin-bottom: 1.5rem;
        }
        .qui-nous-sommes .btn-link {
            background-color: #1ABC9C;
            color: #021F1F;
            padding: 0.5rem 1.5rem;
            border-radius: 20px;
            font-weight: 700;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }
        .qui-nous-sommes .btn-link:hover {
            background-color: #00C853;
            color: white;
        }
        /* Comment nous travaillons */
        .comment-nous-travaillons {
            background-color: #E8F5E9;
            padding: 2rem 1rem;
            border-radius: 10px;
            max-width: 1140px;
            margin: 2rem auto;
            color: #021F1F;
        }
        .cards {
            display: flex;
            gap: 1rem;
            overflow-x: auto;
            padding-bottom: 1rem;
        }
        .card {
            min-width: 250px;
            border-radius: 10px;
            overflow: hidden;
            position: relative;
            cursor: pointer;
            flex-shrink: 0;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            background: #E8F5E9;
            color: #021F1F;
        }
        .card img {
            width: 100%;
            height: 140px;
            object-fit: cover;
            display: block;
        }
        .card-title {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(0, 44, 92, 0.7);
            color: #1ABC9C;
            padding: 0.5rem 1rem;
            font-weight: 700;
            font-size: 1rem;
            border-radius: 0 0 10px 10px;
        }
        /* Responsive */
        @media (max-width: 768px) {
            .cards {
                flex-wrap: nowrap;
            }
            .card {
                min-width: 80%;
            }
        }
    </style>
{% endblock %}


{% extends 'base.html.twig' %}

{% block title %}À propos - Tournoi Inter-Village{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <style>
        body, html {
            margin: 0;
            padding: 0;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            background-color: #0a2342;
            color: #fff;
        }
        a {
            color: #00bcd4;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
        h1, h2, h3 {
            font-weight: 700;
            margin: 0 0 1rem 0;
        }
        h1 {
            font-size: 2.5rem;
            color: white;
        }
        h2 {
            font-size: 1.8rem;
            color: #00bcd4;
            margin-bottom: 1rem;
        }
        p {
            font-size: 1rem;
            line-height: 1.5;
            margin-bottom: 1rem;
            color: white;
        }
        /* Top blue bar with À propos */
        .top-bar {
            background-color: #004a99;
            padding: 1rem 2rem;
            font-size: 2rem;
            font-weight: 700;
            color: white;
        }
        /* Hero slider */
        .hero-slider {
            position: relative;
            height: 350px;
            width: 100%;
        }
        .hero-slide {
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            padding-left: 3rem;
            color: white;
            font-size: 1.5rem;
            font-weight: 600;
            background-repeat: no-repeat;
        }
        .hero-slide .btn-link {
            margin-top: 1rem;
            background-color: #00bcd4;
            color: #002b5c;
            padding: 0.5rem 1.5rem;
            border-radius: 20px;
            font-weight: 700;
            text-decoration: none;
            display: inline-block;
            transition: background-color 0.3s ease;
        }
        .hero-slide .btn-link:hover {
            background-color: #008ba3;
            color: white;
        }
        /* Hero slider pagination dots */
        .hero-pagination {
            position: absolute;
            bottom: 15px;
            left: 3rem;
            display: flex;
            gap: 0.5rem;
        }
        .hero-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: rgba(255,255,255,0.5);
            cursor: pointer;
        }
        .hero-dot.active {
            background-color: white;
        }
        /* Notre travail en action */
        .container-uefa {
            max-width: 1140px;
            margin: 2rem auto;
            padding: 0 1rem;
        }
        .section-title {
            font-weight: 700;
            font-size: 1.8rem;
            margin-bottom: 1rem;
            color: white;
        }
        .work-action {
            background-color: #002b5c;
            padding: 1rem;
            border-radius: 10px;
            position: relative;
        }
        .swiper {
            width: 100%;
            padding-bottom: 2rem;
        }
        .swiper-slide {
            background: #002b5c;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
            text-align: left;
            color: white;
            padding: 0;
            position: relative;
        }
        .swiper-slide img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 10px 10px 0 0;
        }
        .slide-caption {
            padding: 0.5rem 1rem;
            font-size: 1rem;
            font-weight: 600;
        }
        /* Scroll arrows for swiper */
        .swiper-button-next, .swiper-button-prev {
            color: white;
            top: 50%;
            width: 30px;
            height: 30px;
            margin-top: -15px;
        }
        /* Qui nous sommes */
        .qui-nous-sommes {
            background-color: #002b5c;
            background-image: url('{{ asset("assets/uefa_logo_faint.png") }}');
            background-repeat: no-repeat;
            background-position: center;
            background-size: 60%;
            padding: 3rem 2rem;
            border-radius: 10px;
            color: white;
            max-width: 1140px;
            margin: 2rem auto;
            position: relative;
        }
        .qui-nous-sommes h2 {
            color: #00bcd4;
            font-size: 2rem;
            margin-bottom: 1rem;
        }
        .qui-nous-sommes p {
            font-size: 1.1rem;
            max-width: 700px;
            margin-bottom: 1.5rem;
        }
        .qui-nous-sommes .btn-link {
            background-color: #00bcd4;
            color: #002b5c;
            padding: 0.5rem 1.5rem;
            border-radius: 20px;
            font-weight: 700;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }
        .qui-nous-sommes .btn-link:hover {
            background-color: #008ba3;
            color: white;
        }
        /* Comment nous travaillons */
        .comment-nous-travaillons {
            background-color: #d9e9f9;
            padding: 2rem 1rem;
            border-radius: 10px;
            max-width: 1140px;
            margin: 2rem auto;
            color: #002b5c;
        }
        .cards {
            display: flex;
            gap: 1rem;
            overflow-x: auto;
            padding-bottom: 1rem;
        }
        .card {
            min-width: 250px;
            border-radius: 10px;
            overflow: hidden;
            position: relative;
            cursor: pointer;
            flex-shrink: 0;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            background: white;
        }
        .card img {
            width: 100%;
            height: 140px;
            object-fit: cover;
            display: block;
        }
        .card-title {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(0, 44, 92, 0.7);
            color: #00bcd4;
            padding: 0.5rem 1rem;
            font-weight: 700;
            font-size: 1rem;
            border-radius: 0 0 10px 10px;
        }
        /* Responsive */
        @media (max-width: 768px) {
            .cards {
                flex-wrap: nowrap;
            }
            .card {
                min-width: 80%;
            }
        }
    </style>
{% endblock %}


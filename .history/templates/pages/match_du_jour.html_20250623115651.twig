{% extends 'base.html.twig' %}

{% block title %}Match du Jour{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', 'Roboto', 'Inter', sans-serif;
            background: linear-gradient(120deg, #0d1b2a 0%, #1b263b 100%);
            color: #e0e0e0;
        }
        .section-title {
            font-size: 2.5rem;
            font-weight: 700;
            letter-spacing: -1px;
            margin-bottom: 2rem;
            color: #ffffff;
            text-shadow: 0 0 10px #00ff00;
        }
        .match-card {
            background: linear-gradient(135deg, #16213e, #0f3460);
            border-radius: 1.5rem;
            box-shadow: 0 8px 32px rgba(0,255,255,0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            padding: 1.5rem 2rem;
            margin-bottom: 2rem;
            position: relative;
            color: #d0f0ff;
        }
        .match-card:hover {
            transform: translateY(-10px) scale(1.05);
            box-shadow: 0 0 20px #0ff, 0 0 40px #0ff;
        }
        .team-logo {
            width: 60px;
            height: 60px;
            object-fit: contain;
            border-radius: 50%;
            background: #0f3460;
            box-shadow: 0 0 10px #0ff;
            transition: transform 0.3s ease;
        }
        .team-logo:hover {
            transform: scale(1.15) rotate(-10deg);
            box-shadow: 0 0 20px #0ff;
        }
        .team-name {
            font-size: 1.3rem;
            font-weight: 700;
            color: #a0e9ff;
            text-shadow: 0 0 5px #0ff;
        }
        .match-time {
            font-size: 1.5rem;
            font-weight: 700;
            color: #00ffc8;
            text-shadow: 0 0 10px #00ffc8;
        }
        .match-stadium {
            font-size: 1rem;
            color: #66fff9;
            margin-top: 0.5rem;
            text-shadow: 0 0 5px #00ffc8;
        }
        .vs-separator {
            font-size: 1.8rem;
            font-weight: 900;
            color: #00ffc8;
            text-shadow: 0 0 15px #00ffc8;
            margin: 0 1rem;
            user-select: none;
        }
        .classement-container {
            margin-top: 4rem;
            margin-bottom: 4rem;
        }
        .classement-card {
            background: linear-gradient(135deg, #6a11cb, #2575fc);
            border-radius: 1.5rem;
            box-shadow: 0 8px 32px rgba(106, 17, 203, 0.6);
            color: #ffffff;
            overflow: hidden;
            transition: box-shadow 0.3s ease;
        }
        .classement-card:hover {
            box-shadow: 0 0 30px #6a11cb;
        }
        .classement-header {
            background: linear-gradient(45deg, #00ffc8, #1a2a4a);
            padding: 1rem 0;
            text-align: center;
            font-weight: 700;
            font-size: 1.8rem;
            color: #e0f7f7;
            letter-spacing: 1px;
            text-shadow: 0 0 10px #00ffc8;
        }
        table.classement-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 0.75rem;
            font-size: 1rem;
        }
        table.classement-table thead th {
            color: #a0e9ff;
            font-weight: 700;
            padding: 0.75rem 0.5rem;
            text-align: center;
            border-bottom: 2px solid #00ffc8;
            text-shadow: 0 0 5px #00ffc8;
        }
        table.classement-table tbody tr {
            background: #16213e;
            border-radius: 0.75rem;
            transition: background-color 0.3s ease, transform 0.3s ease;
            cursor: pointer;
        }
        table.classement-table tbody tr:hover {
            background-color: #00ffc8;
            color: #0f3460;
            transform: scale(1.02);
            box-shadow: 0 0 15px #00ffc8;
        }
        table.classement-table tbody tr.qualifie {
            background-color: #008000 !important;
            color: #ffffff !important;
            font-weight: 700;
        }
        table.classement-table tbody tr.eliminee {
            background-color: #ff0000 !important;
            color: #ffffff !important;
            font-weight: 700;
        }
        table.classement-table tbody tr td {
            padding: 0.75rem 0.5rem;
            text-align: center;
            vertical-align: middle;
            color: inherit;
        }
        table.classement-table tbody tr td.club-cell {
            text-align: left;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        .club-logo {
            width: 36px;
            height: 36px;
            object-fit: contain;
            border-radius: 50%;
            background: #0f3460;
            box-shadow: 0 0 10px #00ffc8;
        }
        .icon-carton-jaune {
            color: #ffc107;
            font-weight: 700;
            text-shadow: 0 0 5px #ffc107;
        }
        .icon-carton-rouge {
            color: #dc3545;
            font-weight: 700;
            text-shadow: 0 0 5px #dc3545;
        }
        .filter-btns .btn {
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 2rem;
            padding: 0.5rem 1.5rem;
            margin-right: 0.5rem;
            transition: background 0.2s, color 0.2s;
            cursor: pointer;
        }
        .filter-btns .btn.active, .filter-btns .btn:focus {
            background: #00ffc8;
            color: #0f3460;
            box-shadow: 0 0 15px #00ffc8;
        }
        .fade-section {
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.5s;
        }
        .fade-section.show {
            opacity: 1;
            pointer-events: auto;
        }
        .result-card {
            background: #16213e;
            border-radius: 1.5rem;
            box-shadow: 0 8px 32px rgba(0,255,255,0.3);
            color: #d0f0ff;
            padding: 1rem 1.5rem;
            margin-bottom: 1.5rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .result-card:hover {
            transform: translateY(-8px) scale(1.03);
            box-shadow: 0 0 20px #00ffc8;
        }
        .result-team {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        .result-team .team-logo {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #0f3460;
            box-shadow: 0 0 10px #00ffc8;
            transition: transform 0.3s ease;
        }
        .result-team .team-logo:hover {
            transform: scale(1.15) rotate(-10deg);
            box-shadow: 0 0 20px #00ffc8;
        }
        .result-team-name {
            font-weight: 700;
            font-size: 1.1rem;
            color: #a0e9ff;
            text-shadow: 0 0 5px #00ffc8;
        }
        .result-score {
            font-weight: 900;
            font-size: 1.5rem;
            color: #00ffc8;
            text-shadow: 0 0 10px #00ffc8;
            margin: 0 1rem;
            user-select: none;
        }
        .result-info {
            font-size: 0.9rem;
            color: #66fff9;
            text-shadow: 0 0 5px #00ffc8;
            margin-top: 0.5rem;
        }
        @keyframes fadeInUp {
            0% {
                opacity: 0;
                transform: translateY(20px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .fade-in-up {
            animation: fadeInUp 0.6s ease forwards;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="section-title text-center mb-5"><i class="fa-solid fa-futbol text-primary"></i> Matchs à venir aujourd’hui</h1>
    <div class="row g-4 justify-content-center">
        {% if matchsDuJour is not empty %}
            {% for match in matchsDuJour %}
                <div class="col-12 col-md-10 col-lg-8">
                    <div class="match-card d-flex flex-column flex-md-row align-items-center justify-content-between">
                        <div class="d-flex align-items-center mb-3 mb-md-0">
                            <img src="{{ asset('images/teams/' ~ match.club1.logo) }}" alt="{{ match.club1.nom }}" class="team-logo me-3 shadow-sm" />
                            <span class="team-name">{{ match.club1.nom }}</span>
                        </div>
                        <div class="text-center mx-3">
                            <div class="match-time mb-1"><i class="fa-regular fa-clock"></i> {{ match.date|date('H:i') }}</div>
                            {% if match.stade is defined and match.stade %}
                                <div class="match-stadium"><i class="fa-solid fa-location-dot"></i> {{ match.stade }}</div>
                            {% endif %}
                        </div>
                        <div class="d-flex align-items-center mt-3 mt-md-0">
                        <span class="team-name me-3">{{ match.club2.nom }}</span>
                        <img src="{{ asset('images/teams/' ~ match.club2.logo) }}" alt="{{ match.club2.nom }}" class="team-logo ms-2 shadow-sm" />
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-12 text-center">
                <div class="alert alert-info py-4 fs-5">Aucun match à venir aujourd’hui.</div>
            </div>
        {% endif %}
    </div>

    <hr class="my-5">

    <h2 class="section-title text-center mb-4"><i class="fa-solid fa-trophy text-warning"></i> Classement de la poule</h2>
    <div class="classement-container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="classement-card p-3">
                    <div class="classement-header">Classement</div>
                    <table class="classement-table mt-3">
                        <thead>
                            <tr>
                                <th>Rang</th>
                                <th>Club</th>
                                <th>J</th>
                                <th>G</th>
                                <th>N</th>
                                <th>P</th>
                                <th>BM</th>
                                <th>BE</th>
                                <th>+/-</th>
                                <th>Pts</th>
                                <th><i class="fa-solid fa-triangle-exclamation icon-carton-jaune" title="Cartons jaunes"></i></th>
                                <th><i class="fa-solid fa-circle-exclamation icon-carton-rouge" title="Cartons rouges"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set allPoules = ['Poule A', 'Poule B', 'Poule C'] %}
                            {% for pouleNom in allPoules %}
                                <h3 class="text-center mt-4 mb-3">Poule {{ pouleNom|replace({'Poule ': ''}) }}</h3>
                                <table class="classement-table mt-3 mb-5">
                                    <thead>
                                        <tr>
                                            <th>Rang</th>
                                            <th>Club</th>
                                            <th>J</th>
                                            <th>G</th>
                                            <th>N</th>
                                            <th>P</th>
                                            <th>BM</th>
                                            <th>BE</th>
                                            <th>+/-</th>
                                            <th>Pts</th>
                                            <th><i class="fa-solid fa-triangle-exclamation icon-carton-jaune" title="Cartons jaunes"></i></th>
                                            <th><i class="fa-solid fa-circle-exclamation icon-carton-rouge" title="Cartons rouges"></i></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% set equipes = poules[pouleNom]|default([]) %}
                                        {% if equipes|length == 0 %}
                                            <tr>
                                                <td colspan="12" class="text-center">Aucune équipe disponible</td>
                                            </tr>
                                        {% else %}
                                            {% for equipe in equipes %}
                                                {% set classes = [] %}
                                                {% if equipe.rang <= 2 %}
                                                    {% set classes = classes|merge(['qualifie']) %}
                                                {% elseif equipe.rang > (equipes|length - 2) %}
                                                    {% set classes = classes|merge(['eliminee']) %}
                                                {% endif %}
                                                <tr class="{{ classes|join(' ') }}">
                                                    <td>{{ equipe.rang }}</td>
                                                    <td class="club-cell">
                                                        {% if equipe.club.logo %}
                                                            <img src="{{ asset('images/teams/' ~ equipe.club.logo) }}" alt="{{ equipe.club.nom }}" class="club-logo" />
                                                        {% endif %}
                                                        {{ equipe.club.nom }}
                                                    </td>
                                                    <td>{{ equipe.matchsjouer }}</td>
                                                    <td>{{ equipe.gagnes }}</td>
                                                    <td>{{ equipe.nuls }}</td>
                                                    <td>{{ equipe.perdus }}</td>
                                                    <td>{{ equipe.butsPour }}</td>
                                                    <td>{{ equipe.butscontre }}</td>
                                                    <td>{{ equipe.goalaverage }}</td>
                                                    <td>{{ equipe.points }}</td>
                                                    <td><i class="fa-solid fa-triangle-exclamation icon-carton-jaune"></i> {{ equipe.cartonsJaunes }}</td>
                                                    <td><i class="fa-solid fa-circle-exclamation icon-carton-rouge"></i> {{ equipe.cartonsRouges }}</td>
                                                </tr>
                                            {% endfor %}
                                        {% endif %}
                                    </tbody>
                                </table>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5">

    <h2 class="section-title text-center mb-4"><i class="fa-solid fa-trophy text-warning"></i> Résultats</h2>
    <div class="filter-btns text-center mb-4">
        <button id="btn-jour" class="btn btn-outline-primary active">Résultats du jour</button>
        <button id="btn-tous" class="btn btn-outline-primary">Tous les résultats</button>
    </div>

    <div id="resultats-jour" class="fade-section show">
        <div class="row g-4 justify-content-center">
            {% set hasResult = false %}
            {% for rencontre in matchsResultats %}
                {% if rencontre.dateHeure|date('Y-m-d') == "now"|date('Y-m-d') %}
                    {% set hasResult = true %}
                    <div class="col-12 col-md-10 col-lg-8">
                        <div class="match-card d-flex flex-column flex-md-row align-items-center justify-content-between bg-light">
                            <div class="d-flex align-items-center mb-3 mb-md-0">
                                <img src="{{ asset('images/teams/' ~ rencontre.club1.logo) }}" alt="{{ rencontre.club1.nom }}" class="team-logo me-3" />
                                <span class="team-name">{{ rencontre.club1.nom }}</span>
                            </div>
                            <div class="score text-center mx-3">
                                {{ rencontre.scoreclub1 }} <span class="text-muted">-</span> {{ rencontre.scoreclub2 }}
                            </div>
                            <div class="d-flex align-items-center mt-3 mt-md-0">
                                <span class="team-name me-3">{{ rencontre.club2.nom }}</span>
                                <img src="{{ asset('images/teams/' ~ rencontre.club2.logo) }}" alt="{{ rencontre.club2.nom }}" class="team-logo ms-2" />
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
            {% if not hasResult %}
                <div class="col-12 text-center">
                    <div class="alert alert-info py-4 fs-5">Aucun résultat pour aujourd’hui.</div>
                </div>
            {% endif %}
        </div>
    </div>

    <div id="resultats-tous" class="fade-section">
        <div class="row g-4 justify-content-center">
            {% if matchsResultats is not empty %}
                {% for rencontre in matchsResultats %}
                    <div class="col-12 col-md-10 col-lg-8">
                        <div class="match-card d-flex flex-column flex-md-row align-items-center justify-content-between bg-light">
                            <div class="d-flex align-items-center mb-3 mb-md-0">
                                <img src="{{ asset('images/teams/' ~ rencontre.club1.logo) }}" alt="{{ rencontre.club1.nom }}" class="team-logo me-3" />
                                <span class="team-name">{{ rencontre.club1.nom }}</span>
                            </div>
                            <div class="score text-center mx-3">
                                {{ rencontre.scoreclub1 }} <span class="text-muted">-</span> {{ rencontre.scoreclub2 }}
                            </div>
                            <div class="d-flex align-items-center mt-3 mt-md-0">
                                <span class="team-name me-3">{{ rencontre.club2.nom }}</span>
                                <img src="{{ asset('images/teams/' ~ rencontre.club2.logo) }}" alt="{{ rencontre.club2.nom }}" class="team-logo ms-2" />
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-12 text-center">
                    <div class="alert alert-info py-4 fs-5">Aucun résultat disponible.</div>
                </div>
            {% endif %}
        </div>
    </div>

    <script>
        document.getElementById('btn-jour').addEventListener('click', function() {
            document.getElementById('resultats-jour').classList.add('show');
            document.getElementById('resultats-tous').classList.remove('show');
            this.classList.add('active');
            document.getElementById('btn-tous').classList.remove('active');
        });
        document.getElementById('btn-tous').addEventListener('click', function() {
            document.getElementById('resultats-tous').classList.add('show');
            document.getElementById('resultats-jour').classList.remove('show');
            this.classList.add('active');
            document.getElementById('btn-jour').classList.remove('active');
        });
    </script>
</div>
{% endblock %}

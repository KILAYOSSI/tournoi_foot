{% extends 'base.html.twig' %}

{% block title %}Calendrier des matchs{% endblock %}

{% block body %}
<div style="margin:0; font-family: Arial, sans-serif; background: url('/assets/WhatsApp Image 2025-06-26 à 22.33.46_f06c66ca.jpg') no-repeat center center fixed; background-size: cover; color: white; min-height: 100vh; padding: 40px 0;">

  <div class="matchday" style="background-color: rgba(0, 0, 0, 0.7); text-align: center; padding: 20px; max-width: 800px; margin: 60px auto 20px auto; border-radius: 10px; position: relative;">
    <img src="/assets/WhatsApp Image 2025-06-23 à 13.44.55_704b8a70.jpg" alt="Logo" style="position: absolute; top: 10px; left: 10px; height: 60px; width: auto; object-fit: contain;"/>
    <h1 style="font-size: 48px; margin: 0;">MATCHDAY 1</h1>
    <h2 style="font-size: 20px; color: #ccc; margin: 5px 0 0 0;">29 juin - 02 juillet 2025</h2>
  </div>

  <div class="match-list" style="max-width: 800px; margin: 0 auto; background-color: rgba(0, 0, 0, 0.6); padding: 20px 40px; border-radius: 10px;">
    {% for match in matchsAVenir %}
      <div class="match" style="display: grid; grid-template-columns: 1fr auto 1fr; align-items: center; text-align: center; padding: 12px 0; border-bottom: 1px solid #555;">
        <div>
          <div class="team" style="font-weight: bold; font-size: 18px;">{{ match.club1.nom|upper }}</div>
          <div class="match-date" style="font-size: 12px; color: #ccc; margin-top: 4px; text-align: center;">{{ match.date|localizeddate('none', 'none', null, null, 'd MMMM yyyy') }}</div>
        </div>
        <div class="vs" style="font-weight: normal; font-size: 16px; color: #ccc; padding: 0 10px; align-self: center;">VS</div>
        <div>
          <div class="team" style="font-weight: bold; font-size: 18px;">{{ match.club2.nom|upper }}</div>
          <div class="match-date" style="font-size: 12px; color: #ccc; margin-top: 4px; text-align: center;">{{ match.date|localizeddate('none', 'none', null, null, 'd MMMM yyyy') }}</div>
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="footer" style="text-align: center; margin-top: 40px; font-size: 18px; font-weight: bold; color: #ccc; max-width: 800px; margin-left: auto; margin-right: auto;">
    FOOTBALL AS IT’S MEANT TO BE
  </div>

</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Calendrier des matchs{% endblock %}

{% block body %}
<style>
    body, html {
        height: 100%;
        margin: 0;
        padding: 0;
        background-size: cover;
        font-family: 'Arial', sans-serif;
        color: white;
    }
    .container-calendrier {
        min-height: 75vh;
        width: 75vw;
        max-width: 100vw;
        display: block;
        padding: 0;
        box-sizing: border-box;
        background: url('/assets/WhatsApp Image 2025-06-26 à 22.33.46_f06c66ca.jpg') no-repeat center center fixed !important;
        background-size: cover !important;
        margin: 0;
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: stretch;
        margin-top: 56px; /* pour coller sous la navbar fixe */
    }
    .logo-bundesliga {
        position: absolute;
        top: 20px;
        right: 20px;
        width: 80px;
        height: auto;
        z-index: 10;
    }
    .matchday-title {
        background-color: rgba(0, 0, 0, 0.85);
        color: white;
        font-weight: 900;
        font-size: 2.2rem;
        text-align: center;
        padding: 15px 0;
        margin-top: 70px;
        margin-bottom: 10px;
        letter-spacing: 3px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
        width: 100%;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 15px;
        flex-wrap: wrap;
    }
    .match-date {
        background-color: rgba(0, 0, 0, 0.85);
        color: white;
        font-weight: 900;
        font-size: 1.4rem;
        text-align: center;
        padding: 10px 0;
        margin-top: 20px;
        margin-bottom: 20px;
        letter-spacing: 2px;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.7);
        width: 100%;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        flex-wrap: wrap;
    }
    .match-list {
        width: 100%;
        max-width: 600px;
        background-color: rgba(0, 0, 0, 0.75);
        border-radius: 15px;
        padding: 20px 30px;
        box-shadow: 0 0 20px rgba(0,0,0,0.8);
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-left: auto;
        margin-right: auto;
    }
    .match-item {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        border-bottom: 1px solid rgba(255,255,255,0.15);
        font-weight: 900;
        font-size: 1.3rem;
        color: white;
        text-transform: uppercase;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.8);
    }
    .match-item:last-child {
        border-bottom: none;
    }
    .club-name-left {
        flex: 1;
        text-align: left;
    }
    .club-name-right {
        flex: 1;
        text-align: right;
    }
    .vs-box {
        flex: 0 0 60px;
        background-color: #d32f2f;
        color: white;
        font-weight: 900;
        font-size: 1.4rem;
        border-radius: 20px;
        text-align: center;
        padding: 5px 0;
        margin: 0 15px;
        box-shadow: 0 0 10px rgba(211,47,47,0.9);
        text-shadow: 1px 1px 2px rgba(0,0,0,0.7);
    }
    .footer-text {
        margin-top: 30px;
        font-weight: 900;
        font-size: 1.3rem;
        letter-spacing: 2px;
        text-align: center;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
        position: relative;
        z-index: 5;
    }
</style>

<div class="container-calendrier">
    <div class="matchday-title">
        MATCHDAY 1
        <img src="/assets/WhatsApp Image 2025-06-23 à 13.44.55_704b8a70.jpg" alt="Custom Logo" style="height: 40px; margin-left: 15px;" />
    </div>
    <div class="match-date">29 juin – 02 juillet 2025</div>
    {% if matchsAVenir is empty %}
        <p class="no-match">Aucun match à venir.</p>
    {% else %}
        <div class="match-list">
            {% for match in matchsAVenir %}
                <div class="match-item" style="flex-direction: column; align-items: center;">
                    <div style="display: flex; justify-content: space-between; width: 100%;">
                        <div class="club-name-left">{{ match.club1.nom|upper }}</div>
                        <div class="vs-box">VS</div>
                        <div class="club-name-right">{{ match.club2.nom|upper }}</div>
                    </div>
                    <div class="match-date-time" style="color: #ddd; font-size: 0.9rem; font-weight: 600; margin-top: 5px; text-align: center; width: 100%;">
                        {{ match.date|date('d M Y H:i') }}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
    <div class="footer-text">
        FOOTBALL AS IT'S MEANT TO BE
    </div>
</div>
{% endblock %}
